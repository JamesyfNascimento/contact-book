<div id="<%= dom_id contact %>">
  <p>
    <strong>Name:</strong>
    <%= contact.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= contact.email %>
  </p>

  <p>
    <strong>Kind:</strong>
    <%= contact.kind.description %>
  </p>

  <p><%= link_to t('buttons.show'), contact %></p>
  <p><%= link_to t('buttons.edit'), edit_contact_path(contact) %></p>
  <p><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %></p>
</div>
